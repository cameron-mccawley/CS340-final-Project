<html>
    <h3>Current Employees:</h3>
	{{#if PNO}}
	<h4 Project {{PNO}}: {{Projectname}} located in {{Projectlocation}} </h4>
	{{/if}}

    <table id = 't01'>
        <thead>
			<th>SSN</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Salary</th>
            <th>Dno</th>
        </thead>

        <tbody>
            {{#each employee}} 
            <tr> 
				<td>{{Ssn}}</td>
                <td>{{Fname}}</td> 
                <td>{{Lname}}</td> 
                <td>{{Salary}}</td> 
                <td>{{Dno}}</td>
            </tr> 
            {{/each}} 
        </tbody> 
    </table>
	<p>
		<form id='filter_employee' action='' method=''>
		<label> Filter Employees by Project:  </label>
		<select id='project_filter' name='project'>
			{{#each projects}}
			<option value="{{Pnumber}}">{{Pname}}</option>
			{{/each}}
		</select>
		
		<input type="button" class="green_button" value="Filter" onclick="filterEmployeesByProject()">
		<a href="/employee" class="green_button">Clear Filters</a>
		</form>
	<p>

		<form id = 'search_employee' action='' method=''>
			<label> Search all employees for first name starting with: </label>
			<input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
			<input type="button" class="green_button" value="Search" onclick="searchEmployeesByFirstName()">
		</form>

    
</html>
